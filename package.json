{
  "name": "@tapprint/monorepo",
  "version": "1.0.0",
  "description": "TapPrint - Modern printing management system monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=TapPrint-admin\" \"npm run dev --workspace=TapPrint-backend\" \"npm run dev --workspace=TapPrint-cockpit\"",
    "dev:admin": "npm run dev --workspace=TapPrint-admin",
    "dev:backend": "npm run dev --workspace=TapPrint-backend",
    "dev:cockpit": "npm run dev --workspace=TapPrint-cockpit",
    "build": "npm run build --workspaces --if-present",
    "build:admin": "npm run build --workspace=TapPrint-admin",
    "build:backend": "npm run build --workspace=TapPrint-backend",
    "build:cockpit": "npm run build --workspace=TapPrint-cockpit",
    "test": "npm run test --workspaces --if-present",
    "test:admin": "npm run test --workspace=TapPrint-admin",
    "test:backend": "npm run test --workspace=TapPrint-backend",
    "test:cockpit": "npm run test --workspace=TapPrint-cockpit",
    "lint": "npm run lint --workspaces --if-present",
    "lint:admin": "npm run lint --workspace=TapPrint-admin",
    "lint:backend": "npm run lint --workspace=TapPrint-backend",
    "lint:cockpit": "npm run lint --workspace=TapPrint-cockpit",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "typecheck:admin": "npm run typecheck --workspace=TapPrint-admin",
    "typecheck:backend": "npm run typecheck --workspace=TapPrint-backend",
    "typecheck:cockpit": "npm run typecheck --workspace=TapPrint-cockpit",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:admin": "npm run clean --workspace=TapPrint-admin --if-present",
    "clean:backend": "npm run clean --workspace=TapPrint-backend --if-present",
    "clean:cockpit": "npm run clean --workspace=TapPrint-cockpit --if-present",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "ci:install": "npm ci",
    "ci:build": "npm run build",
    "ci:test": "npm run test",
    "ci:lint": "npm run lint && npm run typecheck",
    "prepare": "husky install",
    "audit:fix": "npm audit fix --workspaces",
    "outdated": "npm outdated --workspaces",
    "update:patch": "npm update --workspaces",
    "workspace:list": "npm ls --workspaces --depth=0"
  },
  "workspaces": [
    "TapPrint-admin",
    "TapPrint-backend",
    "TapPrint-cockpit",
    "shared/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrintNavigator/TapPrint.git"
  },
  "bugs": {
    "url": "https://github.com/PrintNavigator/TapPrint/issues"
  },
  "homepage": "https://github.com/PrintNavigator/TapPrint#readme",
  "keywords": [
    "printing",
    "labels",
    "pdf",
    "cups",
    "management",
    "monorepo"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}